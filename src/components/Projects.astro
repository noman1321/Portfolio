---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{
  hasProjects && (
    <section id="projects" class="relative p-4 sm:p-6 md:p-8 lg:p-10 xl:p-12 bg-transparent">
      <div class="relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-3 sm:gap-4 md:gap-6 lg:gap-8 xl:gap-12 items-start">
          <div class="lg:col-span-4">
            <h2 class="section-title text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-7xl font-bold text-white">
              Projects
            </h2>
            <div
              class="section-underline w-[75px] h-[5px] mt-1.5 sm:mt-2 rounded-full"
              style={`background: linear-gradient(90deg, ${siteConfig.accentColor}, #4b0082)`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-3 sm:space-y-4 md:space-y-6">
              {siteConfig.projects.map((project, index) => {
                const Component = project.link ? "a" : "div";
                const linkProps = project.link
                  ? {
                      href: project.link,
                      target: "_blank",
                      rel: "noopener noreferrer",
                    }
                  : {};

                return (
                  <div class="project-card group relative">
                    <Component
                      {...linkProps}
                      class={`block relative p-3 sm:p-4 md:p-6 lg:p-8 bg-white/5 backdrop-blur-sm rounded-lg sm:rounded-xl md:rounded-2xl border border-white/10 transition-all duration-300 ${
                        project.link
                          ? "hover:bg-white/10 hover:shadow-2xl hover:shadow-purple-500/20 hover:border-white/20 hover:-translate-y-1"
                          : ""
                      }`}
                    >
                      {project.link && (
                        <div class="absolute top-3 right-3 sm:top-4 sm:right-4 md:top-6 md:right-6 lg:top-8 lg:right-8 w-8 h-8 sm:w-10 sm:h-10 md:w-11 md:h-11 lg:w-12 lg:h-12 flex items-center justify-center bg-gradient-to-br from-purple-600 to-blue-600 rounded-full text-white transition-all duration-300 group-hover:from-purple-500 group-hover:to-blue-500 group-hover:scale-110">
                          <svg
                            class="w-4 h-4 sm:w-4.5 sm:h-4.5 md:w-5 md:h-5 transition-transform duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M7 17L17 7M17 7H7M17 7V17"
                            />
                          </svg>
                        </div>
                      )}

                      <div class="space-y-1.5 sm:space-y-2 md:space-y-3">
                        <div>
                          <span
                            class="text-xs sm:text-sm font-mono"
                            style={{ color: siteConfig.accentColor }}
                          >
                            0{index + 1}
                          </span>
                          <h3 class="text-lg sm:text-xl md:text-2xl font-bold text-white mt-1">
                            {project.name}
                          </h3>
                        </div>

                        <p
                          class={`text-sm sm:text-base md:text-lg text-white/70 leading-relaxed ${project.link ? "pr-8 sm:pr-12 md:pr-14 lg:pr-16" : ""}`}
                        >
                          {project.description}
                        </p>

                        {project.skills && project.skills.length > 0 && (
                          <div class="flex flex-wrap gap-1 sm:gap-1.5 md:gap-2 pt-1 sm:pt-2">
                            {project.skills.map((skill) => (
                              <span
                                class={`px-2.5 sm:px-3 py-1 sm:py-1.5 bg-white/10 border border-white/20 text-white rounded-md sm:rounded-lg text-xs sm:text-sm font-medium transition-all duration-300 ${
                                  project.link ? "group-hover:bg-white/20 group-hover:border-white/40" : ""
                                }`}
                              >
                                {skill}
                              </span>
                            ))}
                          </div>
                        )}
                      </div>
                    </Component>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
