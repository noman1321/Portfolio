---
import { siteConfig } from "../config";
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
---

{
  hasExperience && (
    <section id="experience" class="relative p-4 sm:p-6 md:p-8 lg:p-10 xl:p-12 bg-transparent">
      <div class="relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-3 sm:gap-4 md:gap-6 lg:gap-8 xl:gap-12 items-start">
          <div class="lg:col-span-4">
            <h2 class="section-title text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-7xl font-bold text-white">
              Experience
            </h2>
            <div
              class="section-underline w-[75px] h-[5px] mt-1.5 sm:mt-2 rounded-full"
              style={`background: linear-gradient(90deg, ${siteConfig.accentColor}, #4b0082)`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="relative">
              {siteConfig.experience.map((exp, index) => (
                <div class="experience-card relative mb-4 sm:mb-6 md:mb-8 last:mb-0">
                  {/* Timeline dot at top of card */}
                  <div
                    class="absolute left-1/2 -top-2 w-4 h-4 bg-gradient-to-br from-purple-600 to-blue-600 border-2 border-white/20 rounded-full -translate-x-1/2 z-20 transition-all duration-300 shadow-lg shadow-purple-500/50"
                  />

                  {/* Connecting line below card */}
                  {index < siteConfig.experience.length - 1 && (
                    <div class="absolute left-1/2 bottom-0 w-0.5 h-12 bg-gradient-to-b from-purple-600/50 to-transparent -translate-x-1/2 translate-y-full z-10" />
                  )}

                  {/* Experience card */}
                  <div class="bg-white/5 backdrop-blur-sm rounded-lg border border-white/10 p-3 sm:p-4 md:p-5 hover:bg-white/10 hover:border-white/20 transition-all duration-300">
                    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-3">
                      <div>
                        <h3 class="text-lg sm:text-xl font-semibold text-white">
                          {exp.title}
                        </h3>
                        <p
                          class="text-base sm:text-lg"
                          style={`color: ${siteConfig.accentColor}`}
                        >
                          {exp.company}
                        </p>
                      </div>
                      <span class="text-xs sm:text-sm text-white/60 mt-2 sm:mt-0">
                        {exp.dateRange}
                      </span>
                    </div>

                    <ul class="space-y-1.5">
                      {exp.bullets.map((bullet) => (
                        <li class="flex items-start">
                          <span class="inline-block w-1.5 h-1.5 rounded-full bg-purple-500 mt-2 mr-3 flex-shrink-0" />
                          <span class="text-sm sm:text-base text-white/70">
                            {bullet}
                          </span>
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
